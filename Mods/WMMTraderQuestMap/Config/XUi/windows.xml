			</panel>
			<panel name="content" pos="2,-392" height="329" depth="1" backgroundcolor="[darkGrey]" bordercolor="[black]" borderthickness="3" pivot="center">
				<sprite depth="8" name="backgroundMain" sprite="menu_empty3px" pos="0,0" width="354" height="329" color="[black]" type="sliced" fillcenter="false" />
